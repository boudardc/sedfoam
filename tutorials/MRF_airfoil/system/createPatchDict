FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Tolerance used in matching faces. Absolute tolerance is span of
// face times this factor. To load incorrectly matches meshes set this
// to a higher value.
matchTolerance 1E-3;

// Do a synchronisation of coupled points after creation of any patches.
// Note: this does not work with points that are on multiple coupled patches
//       with transformations.
pointSync true;

// Patches to create.
patchInfo
(
    {
        name leftRight;
        dictionary
        {
            type empty;
        }
        constructFrom patches;
        patches ( bottomEmptyFaces topEmptyFaces );
    }

    {
        name top;
        dictionary
        {
            type wall;
        }
        constructFrom patches;
        patches ( up );
    }

	{
        name bottom;
        dictionary
        {
            type wall;
        }
        constructFrom patches;
        patches ( down );
    }

    {
        name GGI_master;
        dictionary
        {
            type GGI;
            shadowPatch     GGI_slave;
        	zone            rotorFaces;
       		bridgeOverlap   false;
        }
        constructFrom patches;
        patches ( GGI_1 );
    }

    
     {
        name airfoilFluid;
        dictionary
        {
            type wall;
        }
        constructFrom patches;
        patches ( tail );
    }

    {
        name GGI_slave;
        dictionary
        {
            type GGI;
            shadowPatch GGI_master;
        	zone statorFaces;
       		bridgeOverlap false;
        }
        constructFrom patches;
        patches ( GGI_02 );
    }

    {
        name airfoilFix;
        dictionary
        {
            type wall;
        }
        constructFrom patches;
        patches ( fix );
    }
 
);
