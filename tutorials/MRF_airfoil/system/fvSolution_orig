        "(k|omega|epsilon)" 1e-4;
    }
*/    
}
relaxationFactors
{
    fields
    {
	p		0.3;
	pFinal		1;
    }
    equations
    {
        "(U|k|omega|epsilon)"		0.7;
	"(U|k|omega|epsilon)Final"	1;
    }
}   

