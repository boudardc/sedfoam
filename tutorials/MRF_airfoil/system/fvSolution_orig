FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(pcorr|p)"
    {
        solver           GAMG;
        tolerance        1e-10;
        relTol           1e-6;
        smoother         GaussSeidel;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    pcorrFinal
    {
        $pcorr;
        relTol          0;
    }

    Phi
    {
        $p;
    }

    "(U|k|omega|epsilon|R|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-10;
        relTol          1e-6;
        minIter   2;
    }

    "(U|k|omega|epsilon|R|nuTilda)Final"
    {
        $U;
        relTol          0;
    }

    cellDisplacement
    {
        solver           PCG;
        tolerance        1e-10;
        relTol           0;
        preconditioner         DIC;
//        cacheAgglomeration true;
//        nCellsInCoarsestLevel 10;
//        agglomerator    faceAreaPair;
//        mergeLevels     1;
        minIter   20;
    }
    cellDisplacementFinal
    {
        $cellDisplacement;
        relTol          0;
    }

}

PIMPLE
{
    nCorrectors 2;
    nNonOrthogonalCorrectors 1;

//	turbOnFinalIterOnly		false;



    nOuterCorrectors 20;


    // OpenFOAM (.com), OpenFOAM 5 or older (.org)
    
    residualControl
    {
        U
        {
            tolerance 1e-6;
            relTol      0;
        }
        p
        {
            tolerance 1e-5;
            relTol      0;
        }
        "(k|omega|epsilon)"
        {
            tolerance 1e-5;
            relTol      0;
        }
    }
    
/*
