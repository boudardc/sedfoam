FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    inlet
    {
        // Time-varying inlet velocity
/*        type            uniformFixedValue;
        uniformValue    table
                        (
                            ( 0 0 )
                            ( 1.0 0.375 )
                            ( 4 0.375 )
                        );
*/
//        type            fixedValue;
//        value           $internalField;
        type            turbulentIntensityKineticEnergyInlet;
        intensity       0.05;       // 5% turbulent intensity
        value           $internalField;

    }
    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    solid
    {
        type            kqRWallFunction;
        value           $internalField;
        //value           uniform 0.375;
    }
    flexible
    {
        type            kqRWallFunction;
        value           $internalField;
        //value           uniform 0.375;
    }
    
    top
    {
       type            slip;
//        type            zeroGradient;
//        type            turbulentIntensityKineticEnergyInlet;
//        intensity       0.05;       // 5% turbulent intensity
//        value           $internalField;
        
    }
    down 
    {
       type            slip;
        //type            zeroGradient;
//        type            inletOutlet;
//        inletValue      $internalField;
//        value           $internalField;
        
    }
    rear
    {
       type            empty;
    }
    front
    {
       type            empty;
    }
    AMIext
    {
        type           cyclicAMI;
    }
    AMI
    {
        type           cyclicAMI;
    }

}


